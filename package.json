{
  "name": "bookhub",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "workspaces": [
    "web",
    "extension",
    "shared"
  ],
  "scripts": {
    "dev": "pnpm --filter @bookhub/web dev",
    "build": "pnpm --filter @bookhub/web build",
    "start": "pnpm --filter @bookhub/web start",
    "dev:web": "pnpm --filter @bookhub/web dev",
    "build:web": "pnpm --filter @bookhub/web build",
    "test:web": "pnpm --filter @bookhub/web test",
    "dev:extension": "pnpm --filter @bookhub/extension dev",
    "dev:extension:hot": "pnpm --filter @bookhub/extension dev:hot",
    "build:extension": "pnpm --filter @bookhub/extension build",
    "typecheck": "pnpm -r --if-present typecheck",
    "lint": "pnpm -r --if-present lint",
    "format": "pnpm -r --if-present format",
    "format:check": "pnpm -r --if-present format:check",
    "test": "pnpm -r --if-present test",
    "build:all": "pnpm --filter @bookhub/web build && pnpm --filter @bookhub/extension build"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5"
  }
}
